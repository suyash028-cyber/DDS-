#include<algorithm>
#include<iostream>

using namespace std;
int main(){
    int arr[]={3,5,8,2,4,6};
    int n =sizeof(arr)/sizeof(arr [0]);
    
    for (int i=0;i<n-1;i++){
        int minIndex =i;
        for(int j=i+1;j<n;j++){
            if(arr[j]<arr[minIndex]){
                minIndex =j;
            
            }
        }
        swap(arr[i],arr[minIndex]);
        
    }
    cout<<"array after sorting:";
    for (int i=0; i<n;i++){
        cout<<arr[i]<<"   ";
    }
}
